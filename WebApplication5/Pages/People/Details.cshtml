@page
@model WebApplication5.Pages.People.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>PeopleBirthday</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PeopleBirthday.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PeopleBirthday.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PeopleBirthday.surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PeopleBirthday.surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PeopleBirthday.birthday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PeopleBirthday.birthday)
        </dd>

        <dt class="col-sm-2">
            Days Left Next Year
        </dt>
        <dd class="col-sm-10">
            @(365-Math.Abs(Model.PeopleBirthday.birthday.DayOfYear - DateTime.Now.DayOfYear))
        </dd>


        <dt class="col-sm-2">
            Days Left This Year
        </dt>
        <dd class="col-sm-10">
            @(Model.PeopleBirthday.birthday.DayOfYear - DateTime.Now.DayOfYear)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.PeopleBirthday.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
