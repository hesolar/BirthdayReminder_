<p>
    <a asp-page="Create">Create New</a>-
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PeopleBirthday[0].ID)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.PeopleBirthday[0].surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PeopleBirthday[0].birthday)
            </th>
            <th>Days Ago This Year</th>
            <th>Days Next Year</th>
        </tr>
    </thead>
    <tbody>


        @foreach( var item in Model.PeopleBirthday ) {
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => item.ID)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.birthday)
                </td>
                <td>@(item.birthday.DayOfYear - DateTime.Now.DayOfYear)</td>
                <td>@(item.birthday.DayOfYear - DateTime.Now.DayOfYear>0?365+ Math.Abs(item.birthday.DayOfYear - DateTime.Now.DayOfYear) : 365 - Math.Abs(item.birthday.DayOfYear - DateTime.Now.DayOfYear))</td>

                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

